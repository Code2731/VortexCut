<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Styles.Resources>
        <!-- Professional Dark Theme Palette (VS Code/Kdenlive 스타일) -->
        <Color x:Key="ColorBgDark">#0F0F0F</Color>
        <Color x:Key="ColorBgBase">#121212</Color>
        <Color x:Key="ColorBgPanel">#1E1E1E</Color>
        <Color x:Key="ColorBgHeader">#252526</Color>
        <Color x:Key="ColorBgHeaderHover">#2D2D30</Color>
        <Color x:Key="ColorBorder">#3E3E42</Color>
        <Color x:Key="ColorBorderLight">#555555</Color>

        <!-- Accent Colors -->
        <Color x:Key="ColorAccent">#007ACC</Color>
        <Color x:Key="ColorAccentHover">#1C97EA</Color>
        <Color x:Key="ColorAccentPressed">#005A9E</Color>
        <Color x:Key="ColorSuccess">#4CAF50</Color>
        <Color x:Key="ColorWarning">#FF9800</Color>
        <Color x:Key="ColorError">#F44336</Color>
        <Color x:Key="ColorInformation">#4FC3F7</Color>

        <!-- Text Colors -->
        <Color x:Key="ColorTextPrimary">#CCCCCC</Color>
        <Color x:Key="ColorTextBright">#FFFFFF</Color>
        <Color x:Key="ColorTextSecondary">#969696</Color>
        <Color x:Key="ColorTextDisabled">#555555</Color>
        <Color x:Key="ColorTextHint">#6E6E6E</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="BgDarkBrush" Color="{StaticResource ColorBgDark}"/>
        <SolidColorBrush x:Key="BgBaseBrush" Color="{StaticResource ColorBgBase}"/>
        <SolidColorBrush x:Key="BgPanelBrush" Color="{StaticResource ColorBgPanel}"/>
        <SolidColorBrush x:Key="BgHeaderBrush" Color="{StaticResource ColorBgHeader}"/>
        <SolidColorBrush x:Key="BgHeaderHoverBrush" Color="{StaticResource ColorBgHeaderHover}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource ColorBorder}"/>
        <SolidColorBrush x:Key="BorderLightBrush" Color="{StaticResource ColorBorderLight}"/>

        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource ColorAccent}"/>
        <SolidColorBrush x:Key="AccentHoverBrush" Color="{StaticResource ColorAccentHover}"/>
        <SolidColorBrush x:Key="AccentPressedBrush" Color="{StaticResource ColorAccentPressed}"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource ColorSuccess}"/>
        <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource ColorWarning}"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ColorError}"/>
        <SolidColorBrush x:Key="InformationBrush" Color="{StaticResource ColorInformation}"/>

        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource ColorTextPrimary}"/>
        <SolidColorBrush x:Key="TextBrightBrush" Color="{StaticResource ColorTextBright}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource ColorTextSecondary}"/>
        <SolidColorBrush x:Key="TextDisabledBrush" Color="{StaticResource ColorTextDisabled}"/>
        <SolidColorBrush x:Key="TextHintBrush" Color="{StaticResource ColorTextHint}"/>

        <!-- Gradients -->
        <LinearGradientBrush x:Key="HeaderGradientBrush" StartPoint="0%,0%" EndPoint="0%,100%">
            <GradientStop Color="#2D2D30" Offset="0"/>
            <GradientStop Color="#252526" Offset="1"/>
        </LinearGradientBrush>

        <!-- 아이콘은 Material.Icons.Avalonia 패키지 사용 -->
    </Styles.Resources>

    <!-- ========================================
         BASE STYLES
         ======================================== -->
    <Style Selector="Window">
        <Setter Property="Background" Value="{StaticResource BgDarkBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="FontFamily" Value="Segoe UI, Inter, -apple-system, BlinkMacSystemFont, sans-serif"/>
        <Setter Property="FontSize" Value="13"/>
    </Style>

    <!-- ========================================
         PANEL HEADER (DaVinci Resolve Style)
         ======================================== -->
    <Style Selector="Border.PanelHeader">
        <Setter Property="Background" Value="{StaticResource HeaderGradientBrush}"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
    </Style>

    <Style Selector="TextBlock.PanelTitle">
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="LetterSpacing" Value="1.5"/>
    </Style>

    <!-- ========================================
         HEADER TAB BUTTON (Inspector PROPS/HISTORY)
         ======================================== -->
    <Style Selector="Button.HeaderTab">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
        <Setter Property="CornerRadius" Value="2"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
    <Style Selector="Button.HeaderTab:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{StaticResource BgDarkBrush}"/>
        <Setter Property="TextElement.Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>

    <Style Selector="Button.HeaderTabActive">
        <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="CornerRadius" Value="2"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
    <Style Selector="Button.HeaderTabActive:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
    </Style>

    <!-- ========================================
         TOOLBAR BUTTON (Premiere Pro Style)
         ======================================== -->
    <Style Selector="Button.ToolButton">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Padding" Value="10,6"/>
        <Setter Property="CornerRadius" Value="3"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.15"/>
                <BrushTransition Property="BorderBrush" Duration="0:0:0.15"/>
            </Transitions>
        </Setter>
    </Style>
    <Style Selector="Button.ToolButton:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{StaticResource BgHeaderHoverBrush}"/>
    </Style>
    <Style Selector="Button.ToolButton:pressed /template/ ContentPresenter">
        <Setter Property="Background" Value="{StaticResource BorderLightBrush}"/>
    </Style>

    <!-- Primary Button (Accent) -->
    <Style Selector="Button.PrimaryButton">
        <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrightBrush}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.15"/>
            </Transitions>
        </Setter>
    </Style>
    <Style Selector="Button.PrimaryButton:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{StaticResource AccentHoverBrush}"/>
    </Style>
    <Style Selector="Button.PrimaryButton:pressed /template/ ContentPresenter">
        <Setter Property="Background" Value="{StaticResource AccentPressedBrush}"/>
    </Style>

    <!-- ========================================
         MENU STYLE
         ======================================== -->
    <Style Selector="Menu">
        <Setter Property="Background" Value="Transparent"/>
    </Style>
    <Style Selector="MenuItem">
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="FontSize" Value="12.5"/>
        <Setter Property="Padding" Value="10,6"/>
    </Style>
    <Style Selector="MenuItem:pointerover /template/ Border#PART_LayoutRoot">
        <Setter Property="Background" Value="{StaticResource BgHeaderHoverBrush}"/>
    </Style>

    <!-- ========================================
         GRIDSPLITTER (Smooth Transition)
         ======================================== -->
    <Style Selector="GridSplitter">
        <Setter Property="Background" Value="{StaticResource BorderBrush}"/>
        <Setter Property="Opacity" Value="0.3"/>
        <Setter Property="Transitions">
            <Transitions>
                <DoubleTransition Property="Opacity" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>
    <Style Selector="GridSplitter:pointerover">
        <Setter Property="Opacity" Value="1"/>
        <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
    </Style>

    <!-- ========================================
         TEXTBOX / INPUT STYLE
         ======================================== -->
    <Style Selector="TextBox">
        <Setter Property="Background" Value="{StaticResource BgDarkBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="CornerRadius" Value="3"/>
    </Style>
    <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
        <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
    </Style>

    <!-- ========================================
         LISTBOX STYLE
         ======================================== -->
    <Style Selector="ListBox">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>
    <Style Selector="ListBoxItem">
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>
    <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{StaticResource BgHeaderHoverBrush}"/>
    </Style>
    <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
        <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrightBrush}"/>
    </Style>

    <!-- ========================================
         SCROLLBAR STYLE (Minimal Dark)
         ======================================== -->
    <Style Selector="ScrollBar">
        <Setter Property="Background" Value="Transparent"/>
    </Style>
    <Style Selector="ScrollBar:vertical">
        <Setter Property="Width" Value="10"/>
    </Style>
    <Style Selector="ScrollBar:horizontal">
        <Setter Property="Height" Value="10"/>
    </Style>
    <Style Selector="ScrollBar /template/ Thumb">
        <Setter Property="Background" Value="{StaticResource BorderLightBrush}"/>
        <Setter Property="CornerRadius" Value="5"/>
    </Style>
    <Style Selector="ScrollBar /template/ Thumb:pointerover">
        <Setter Property="Background" Value="{StaticResource TextSecondaryBrush}"/>
    </Style>
</Styles>